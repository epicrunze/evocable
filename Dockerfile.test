FROM python:3.10-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt ./
COPY services/api/requirements.txt ./services/api/
COPY services/storage/requirements.txt ./services/storage/
COPY tests/requirements.txt ./tests/

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt
RUN pip install --no-cache-dir -r services/api/requirements.txt
RUN pip install --no-cache-dir -r services/storage/requirements.txt
RUN pip install --no-cache-dir -r tests/requirements.txt

# Copy the entire project
COPY . .

# Set environment variables for testing
ENV PYTHONPATH=/app
ENV TESTING=true
ENV API_BASE_URL=https://server.epicrunze.com
# Create app user
RUN useradd --create-home --shell /bin/bash app \
    && chown -R app:app /app

USER app

# Default command
CMD ["python", "tests/run_tests.py"]