# API Configuration
API_KEY=your-secret-api-key-here
API_HOST=0.0.0.0
API_PORT=8000

# Storage Service Configuration
STORAGE_HOST=0.0.0.0
STORAGE_PORT=8001
DATABASE_URL=sqlite:///data/audiobooks.db

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# File Storage Paths
TEXT_DATA_PATH=/data/text
WAV_DATA_PATH=/data/wav
SEGMENT_DATA_PATH=/data/ogg
META_DATA_PATH=/data/meta

# Processing Configuration
CHUNK_SIZE_CHARS=800
SEGMENT_DURATION=3.14
OPUS_BITRATE=32k

# TTS Configuration
MODEL_PATH=/models/fastpitch_hifigan
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility

# Queue Configuration
INGEST_QUEUE_NAME=ingest_queue
SEGMENT_QUEUE_NAME=segment_queue
TTS_QUEUE_NAME=tts_queue
TRANSCODE_QUEUE_NAME=transcode_queue

# Client Configuration
CLIENT_PORT=3000
API_BASE_URL=http://localhost:8000

# Development Configuration
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=development

# Security (for production)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_HOSTS=localhost,127.0.0.1

# Monitoring
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3 